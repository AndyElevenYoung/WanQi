<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wanqi.andy.ui.AboutActivity">


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/iv_about_back"
        android:layout_margin="10dp"
        android:onClick="aboutOnClick"
        android:src="@mipmap/back"/>

    <TextView
        android:id="@+id/tv_about_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_about_back"
        android:layout_toEndOf="@+id/iv_about_back"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="关于玩奇"
        android:textSize="20sp"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/iv_about_back"
        android:layout_centerHorizontal="true"
        android:src="@drawable/wanqi_logo"
        android:id="@+id/iv_about" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_about"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="@string/about_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#d6000000"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/about_certification"/>

</RelativeLayout>

