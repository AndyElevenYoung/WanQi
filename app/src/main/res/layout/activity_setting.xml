<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_setting_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:onClick="settingOnClick"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tv_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="设置"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout style="@style/wrap_layout">

        <LinearLayout style="@style/top_layout">

            <TextView
                android:id="@+id/tv_setting_address"
                style="@style/normal_text"
                android:text="常用地址" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>

        <View style="@style/bg_line" />

        <LinearLayout style="@style/mid_layout">

            <TextView
                android:id="@+id/tv_setting_check_update"
                style="@style/normal_text"
                android:text="检查更新" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>

        <View style="@style/bg_line" />

        <LinearLayout style="@style/bottom_layout">

            <TextView
                android:id="@+id/tv_setting_message"
                style="@style/normal_text"
                android:text="消息推送" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout style="@style/wrap_layout">

        <LinearLayout style="@style/top_layout">

            <TextView
                android:id="@+id/tv_setting_user_protocol"
                style="@style/normal_text"
                android:text="用户协议" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>

        <View style="@style/bg_line" />

        <LinearLayout style="@style/bottom_layout">

            <TextView
                android:id="@+id/tv_setting_money_info"
                style="@style/normal_text"
                android:text="押金说明" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout style="@style/wrap_layout">

        <LinearLayout style="@style/single_layout">

            <TextView
                android:id="@+id/tv_give_advice"
                style="@style/normal_text"
                android:text="反馈建议" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_setting_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="@drawable/selector_scan_btn"
        android:text="退出登录"
        android:onClick="settingOnClick"
        android:textSize="18sp" />

</LinearLayout>